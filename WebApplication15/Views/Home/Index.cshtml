@{
    ViewData["Title"] = "Register";
}
@model Consultation
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, WebApplication15
<html>
<head>
    <title>
        @ViewData["Title"]
    </title>
</head>
<body>
    <div class="text-center">
        <h2 class="display-6">Fill in the form</h2>
        <form method="post" style="width: 50%; margin: auto">
            <div class="form-group">
                <label asp-for="Name">Name*</label>
                <input class="form-control" type="text" name="name" asp-for="Name" />
                <span asp-validation-for="Name" />
                <small class="form-text text-muted">*First and last name</small>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email**</label>
                <input class="form-control" type="email" name="email" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Subject">Subject</label>
                <select class="form-control" name="subject" asp-for="Subject">
                    <option value="JavaScript">JavaScript</option>
                    <option value="C#">C#</option>
                    <option value="Java">Java</option>
                    <option value="Python">Python</option>
                    <option value="Basics">Basics</option>
                </select>
                <span asp-validation-for="Subject" />
            </div>
            <div class="form-group">
                <label asp-for="Date">Registration date</label>
                <input class="form-control" type="date" name="date" asp-for="Date" />
                <small class="form-text text-muted">**All fields are required</small>
                <span asp-validation-for="Date" />
            </div>
            <button type="submit" class="btn btn-primary">Continue</button>
        </form>
        <vc:mark-errors consultation="@Model"></vc:mark-errors>
    </div>
</body>
</html>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
